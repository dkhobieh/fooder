<% include ../partials/header %>
<div class="container">
    <div class="row">

        <h1 style = "text-align: center;">Edit <%= meal.name %></h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/meals/<%= meal._id %>?_method=PUT" method="POST">
                <div class = "form-group">
                    <input class="form-control" type="text" name="meal[name]" value="<%= meal.name %>">
                </div>
                <div class = "form-group">
                    <input class="form-control" type="number" name="meal[price]" value="<%= meal.price %>" min="0.01" step="0.01">
                </div>
                <div class = "form-group">
                    <input class="form-control" type="text" name="meal[image]" value="<%= meal.image %>">
                </div>
                <div class = "form-group">
                    <input class="form-control" type="text" name="meal[description]" value="<%= meal.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= meal.location %>">
                </div>
                <div class = "form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/meals">Go Back</a>

        </div>
        
    </div>
</div>

<% include ../partials/footer %>